<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_weight="2" android:layout_height="wrap_content"
                  android:id="@+id/tv_stock_ticker"
                  android:layout_margin="16dp"/>
        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                  android:id="@+id/tv_stock_price"/>
        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                  android:id="@+id/tv_stock_change"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_stock_name"
              android:layout_margin="16dp"/>
</LinearLayout>